<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetEnd="0dp"
        android:elevation="@dimen/elevation"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ToolbarPopup"
        app:theme="@style/ToolbarStyle"
        app:titleTextAppearance="@style/Toolbar.TitleText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@android:color/white">

        <View
            android:id="@+id/v_base"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent" />

        <!--Button Turn off engine-->
        <ImageView
            android:id="@+id/iv_turn_off_engine"
            android:layout_width="150dp"
            android:layout_height="167dp"
            android:layout_above="@id/v_base"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/ic_btn_normal" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="167dp"
            android:layout_above="@id/v_base"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/iv_turn_off_engine_sub"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:src="@mipmap/ic_turn_off_engine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_turn_off_engine_sub"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/tv_turn_off_engine"
                android:textColor="@color/white"
                android:textSize="@dimen/font_large" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_turn_off_engine1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@id/v_base"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_turn_off_engine2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_above="@id/v_base"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent" />


        <!--Button Anti Thief-->
        <ImageView
            android:id="@+id/iv_anti_thief"
            android:layout_width="150dp"
            android:layout_height="167dp"
            android:layout_below="@id/v_base"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_btn_turn_off" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="167dp"
            android:layout_below="@id/v_base"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/iv_anti_thief_sub"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:src="@mipmap/ic_turn_off_anti_thief" />

            <TextView
                android:id="@+id/tv_anti_thief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_anti_thief_sub"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/tv_turn_off_anti_thief"
                android:textColor="@color/white"
                android:textSize="@dimen/font_large" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_anti_thief1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/v_base"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_anti_thief2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_below="@id/v_base"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent" />


        <!--Button Find my bike-->
        <ImageView
            android:id="@+id/iv_find_my_bike"
            android:layout_width="150dp"
            android:layout_height="167dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/v_base"
            android:src="@mipmap/ic_btn_normal" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="167dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/v_base">

            <ImageView
                android:id="@+id/iv_find_my_bike_sub"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:src="@mipmap/ic_find_my_bike" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_find_my_bike_sub"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/tv_find_my_bike"
                android:textColor="@color/white"
                android:textSize="@dimen/font_large" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_find_my_bike1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@id/v_base"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_find_my_bike2"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/v_base"
            android:background="@android:color/transparent" />


        <!--Button Find location-->
        <ImageView
            android:id="@+id/iv_find_location"
            android:layout_width="150dp"
            android:layout_height="167dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/v_base"
            android:src="@mipmap/ic_btn_normal" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="167dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/v_base">

            <ImageView
                android:id="@+id/iv_find_location_sub"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:src="@mipmap/ic_find_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_find_location_sub"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/tv_find_location"
                android:textColor="@color/white"
                android:textSize="@dimen/font_large" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_find_location1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/v_base"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_find_location2"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/v_base"
            android:background="@android:color/transparent" />
    </RelativeLayout>


</RelativeLayout>
