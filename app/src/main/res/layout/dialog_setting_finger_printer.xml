<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_bright_border_radius">

    <android.support.v7.widget.Toolbar
        android:id="@+id/finger_printer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:elevation="@dimen/elevation"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ToolbarPopup"
        app:theme="@style/ToolbarStyle"
        app:titleTextAppearance="@style/Toolbar.TitleText">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_back_press"
            android:gravity="center"
            android:text="@string/tv_finger_printer_title"
            android:textAlignment="gravity"
            android:textColor="@color/bright_color"
            android:textSize="@dimen/font_20_sp" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tv_vehicle_owner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="@dimen/elevation"
        android:layout_below="@id/finger_printer_toolbar"
        android:padding="@dimen/large_space"
        android:paddingBottom="@dimen/large_space"
        android:paddingRight="@dimen/large_space"
        android:text="@string/tv_vehicle_owner"
        android:textSize="@dimen/large_space" />

    <View
        android:id="@+id/v_separate"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/tv_vehicle_owner"
        android:background="@color/high_light_color" />

    <EditText
        android:id="@+id/et_finger_id_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/v_separate"
        android:background="@drawable/et_highlight_border"
        android:padding="@dimen/large_space"
        android:textSize="@dimen/font_large" />

    <ImageView
        android:id="@+id/btn_delete_finger_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/v_separate"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_delete" />

    <EditText
        android:id="@+id/et_finger_id_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_finger_id_1"
        android:background="@drawable/et_highlight_border"
        android:padding="@dimen/large_space"
        android:textSize="@dimen/font_large" />

    <ImageView
        android:id="@+id/btn_delete_finger_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/et_finger_id_1"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_delete" />

    <EditText
        android:id="@+id/et_finger_id_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_finger_id_2"
        android:background="@drawable/et_highlight_border"
        android:padding="@dimen/large_space"
        android:textSize="@dimen/font_large" />

    <ImageView
        android:id="@+id/btn_delete_finger_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/et_finger_id_2"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_delete" />

    <EditText
        android:id="@+id/et_finger_id_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_finger_id_3"
        android:background="@drawable/et_highlight_border"
        android:padding="@dimen/large_space"
        android:textSize="@dimen/font_large" />

    <ImageView
        android:id="@+id/btn_delete_finger_4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/et_finger_id_3"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_delete" />

    <TextView
        android:id="@+id/btn_add_finger"
        style="@style/btn_bright"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_finger_id_4"
        android:gravity="center_vertical|left"
        android:paddingBottom="10dp"
        android:paddingLeft="55dp"
        android:elevation="@dimen/elevation"
        android:paddingTop="10dp"
        android:text="@string/btn_add_finger"
        android:textAlignment="gravity"
        android:textSize="@dimen/font_large" />

    <ImageView
        android:elevation="@dimen/elevation"
        android:id="@+id/iv_add_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_finger_id_4"
        android:padding="5dp"
        android:src="@mipmap/ic_add_finger" />

    <View
        android:id="@+id/v_separate_2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/btn_add_finger"
        android:background="@color/high_light_color" />

    <Button
        android:id="@+id/btn_finger_printer_ok"
        style="@style/btn_orange_border_radius"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_below="@id/v_separate_2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/large_space"
        android:elevation="@dimen/elevation"
        android:padding="@dimen/large_space"
        android:text="@string/btn_finger_printer_ok"
        android:textSize="@dimen/font_20_sp"
        app:layout_widthPercent="60%" />

</android.support.percent.PercentRelativeLayout>