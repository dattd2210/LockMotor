<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="Application_Theme" parent="BaseAppTheme">
        <item name="android:windowBackground">@mipmap/application_image</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_color</item>
        <item name="colorPrimaryDark">@color/dark_color</item>
        <item name="colorAccent">@color/light_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:actionBarStyle">@style/ToolbarStyle</item>
        <!-- Menu drawer arrow style  -->
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <item name="textAllCaps">false</item>

        <!-- Popup size style -->
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowMinWidthMajor">80%</item>
    </style>


    <!--######################## Dialog style ########################-->
    <style name="CustomDialogLoading" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!--######################## Menu drawer style ########################-->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/bright_color</item>
    </style>


    <!--######################## Toolbar style ########################-->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/black_color</item>
        <item name="android:textColorSecondary">@color/black_color</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:popupMenuStyle">@style/ToolbarPopup</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="actionMenuTextColor">@color/black_color</item>
        <item name="android:actionMenuTextColor">@color/black_color</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ToolbarPopup" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:background">@color/primary_color</item>
        <item name="android:textColor">@color/bright_color</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!--######################## TextView style ########################-->

    <style name="text_black_18">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:layout_marginLeft">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
    </style>

    <style name="text_black_large">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_marginLeft">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
    </style>


    <!--######################## EditText style ########################-->
    <style name="et_bright_18">
        <item name="android:layout_marginLeft">@dimen/large_space</item>
        <item name="android:layout_marginRight">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
        <item name="android:background">@drawable/et_highlight_border</item>
        <item name="android:paddingLeft">@dimen/large_space</item>
        <item name="android:paddingRight">@dimen/large_space</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="et_bright_large">
        <item name="android:layout_marginLeft">@dimen/large_space</item>
        <item name="android:layout_marginRight">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
        <item name="android:background">@drawable/et_highlight_border</item>
        <item name="android:paddingLeft">@dimen/large_space</item>
        <item name="android:paddingRight">@dimen/large_space</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <!--######################## Button style ########################-->
    <style name="btn_bright_border_radius_margin_left">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_marginLeft">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
        <item name="android:background">@drawable/btn_bright_border_radius</item>
    </style>

    <style name="btn_bright_border_radius_margin_right">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_marginRight">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
        <item name="android:background">@drawable/btn_bright_border_radius</item>
    </style>

    <style name="btn_bright_border_radius">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_marginLeft">@dimen/large_space</item>
        <item name="android:layout_marginRight">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
        <item name="android:background">@drawable/btn_bright_border_radius</item>
    </style>

    <style name="btn_orange_border_radius_margin_left">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/bright_color</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_marginLeft">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
        <item name="android:background">@drawable/btn_orange_border_radius</item>
    </style>

    <style name="btn_orange_border_radius_margin_right">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/bright_color</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
        <item name="android:background">@drawable/btn_orange_border_radius</item>
    </style>

    <style name="btn_orange_border_radius">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/bright_color</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_marginLeft">@dimen/large_space</item>
        <item name="android:layout_marginRight">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
        <item name="android:background">@drawable/btn_orange_border_radius</item>
    </style>

    <style name="btn_bright_setting">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_marginLeft">@dimen/large_space</item>
        <item name="android:layout_marginRight">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/xlarge_space</item>
        <item name="android:background">@drawable/btn_bright_border_radius</item>
    </style>

</resources>
